<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/back_button"
        android:layout_width="127dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/button_pink"
        android:text="@string/back"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/pfp_placeholder"
        android:layout_width="195dp"
        android:layout_height="189dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Profile Picture Placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <ImageView
        android:id="@+id/info_backdrop"
        android:layout_width="330dp"
        android:layout_height="413dp"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949"
        app:srcCompat="@drawable/roundback" />

    <TextView
        android:id="@+id/name_display"
        android:layout_width="251dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text="@string/loading_placeholder"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/info_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/info_backdrop"
        app:layout_constraintStart_toStartOf="@+id/info_backdrop"
        app:layout_constraintTop_toTopOf="@+id/info_backdrop"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/age_display"
        android:layout_width="251dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text="@string/loading_placeholder"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/info_backdrop"
        app:layout_constraintEnd_toEndOf="@+id/info_backdrop"
        app:layout_constraintStart_toStartOf="@+id/info_backdrop"
        app:layout_constraintTop_toTopOf="@+id/info_backdrop"
        app:layout_constraintVertical_bias="0.516" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="231dp"
        android:layout_height="112dp"
        android:backgroundTint="@color/button_pink"
        android:text="@string/log_out"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932" />

</androidx.constraintlayout.widget.ConstraintLayout>