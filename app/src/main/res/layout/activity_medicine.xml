<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/foregroundImage"
        android:layout_width="180dp"
        android:layout_height="118dp"
        android:src="@drawable/mdtitlle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/medicine_list_text_view"
        android:layout_width="325dp"
        android:layout_height="520dp"
        android:layout_margin="16dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/bubble_background"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foregroundImage" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>

    <!-- Back Button -->

    <Button
        android:id="@+id/back"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/button_pink"
        android:text="@string/back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/remove"
        android:layout_width="124dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/button_pink"
        android:minWidth="64dp"
        android:text="@string/remove"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/medicine_list_text_view" />

    <Button
        android:id="@+id/add"
        android:layout_width="107dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/button_pink"
        android:minWidth="64dp"
        android:text="@string/add"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicine_list_text_view" />

    <Button
        android:id="@+id/Test"
        android:layout_width="283dp"
        android:layout_height="141dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="371dp"
        android:backgroundTint="@color/button_pink"
        android:minWidth="68dp"
        android:text="@string/Fingolimod"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/medicine_list_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foregroundImage" />


</androidx.constraintlayout.widget.ConstraintLayout>
